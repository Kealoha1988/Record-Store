<div class= "container">
<%= form_for @store do |f| %>
<%= f.label "Store Name:" %> <br>
<%= f.text_field :name %>
<br><br>


<%= f.label "Address:" %> <br>
<%= f.text_field :address %>
<br><br>

<%= f.label "Bio:" %> <br>
<%= f.text_field :bio %>
<br><br>

<%= f.label "Image URL:" %> <br>
<%= f.text_field :image %>
<br><br>
<center>
<%= f.submit "#{button_label}", class: 'btn btn-small orange white-text' %>
</center>

<% end %>

</div>
