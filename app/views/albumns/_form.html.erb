<%= form_for [@store, @album] do |f| %>

<h3>Choose Genre</h3> <br>
 <%= f.collection_select :genre_id, Genre.order(:name),:id,:name, {:prompt => "Select Genre"} %>
<br><br>
<h3> Choose Format </h3>
<%= f.select :format, [['Vinyl', 'Vinyl'], ['CD', 'CD'], ['Cassette Tape', 'Cassette Tape']], {:prompt => "Select Format"} %>

<br>
<br>
<%= f.label "Title:" %> <br>
<%= f.text_field :title %>
<br><br>

<%= f.label "Artist:" %> <br>
<%= f.text_field :artist %>
<br><br>

<%= f.label "Record Label:" %> <br>
<%= f.text_field :label %>
<br><br>

<%= f.label "Release Date:" %> <br>
<%= f.date_field :release_date %>
<br><br>

<%= f.label "Price:" %> <br>
<%= f.number_field :price %>
<br><br><br>


<%= f.submit "#{button_label}" %>

<% end %>