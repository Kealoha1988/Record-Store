<center>
<h3>Log In</h3>
</center>


<%= form_tag user_login_path do %>
    <div class="input-field">
        <%= label_tag "user name:" %> <br>
        <%= text_field_tag :username%>
    </div>
    <div class="input-field">
        <%= label_tag "email:" %> <br>
        <%= email_field_tag :email%>
    </div>
    <div class="input-field">
        <%= label_tag :password %> <br>
        <%= password_field_tag :password %>
    </div>
    <%= submit_tag "Login" %>
<% end %>

</div>
