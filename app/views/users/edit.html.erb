<center>
<h3>edit profile</h3>
</center>


<div class="container">

<%= form_for @user do |f| %>

<%= f.label "username:" %> <br>
<%= f.text_field :username %>
<br><br>

<%= f.label "First Name" %> <br>
<%= f.text_field :first_name %>
<br><br>

<%= f.label "Last Name:" %> <br>
<%= f.text_field :last_name %>
<br><br>

<%= f.label "photo url" %> <br>
<%= f.text_field :image %>
<br><br>



<%= f.submit "make changes", class: 'btn btn-small light-blue white-text'  %><%= button_to "Delete Profile", user_path(@user), :method => "delete", class: 'btn btn-small orange white-text' %> 

<% end %>

</div>